---
import Layout from '../layouts/Layout.astro';
import LeftSidebar from '../components/LeftSidebar.astro';
import RightSidebar from '../components/RightSidebar.astro';
---

<Layout title="Links - BÃ©la's Blog" description="Useful links and resources">
  <div class="main-layout">
    <LeftSidebar />
    
    <main class="main-content">
      <section class="links-page">
        <h1 class="page-title">Links</h1>
        <p class="page-description">Useful links and resources</p>
        
        <div class="links-container">
          <div class="links-section">
            <h2 class="section-title">Learning Resources</h2>
            <div class="links-grid">
              <a href="https://www.tinkercad.com" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Tinkercad</h3>
                <p class="link-description">3D design and modeling tool</p>
                <span class="link-url">tinkercad.com</span>
              </a>
              
              <a href="https://scratch.mit.edu" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Scratch</h3>
                <p class="link-description">Learn to code with visual programming</p>
                <span class="link-url">scratch.mit.edu</span>
              </a>
              
              <a href="https://www.khanacademy.org" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Khan Academy</h3>
                <p class="link-description">Free educational videos and exercises</p>
                <span class="link-url">khanacademy.org</span>
              </a>
            </div>
          </div>
          
          <div class="links-section">
            <h2 class="section-title">Creative Tools</h2>
            <div class="links-grid">
              <a href="https://www.canva.com" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Canva</h3>
                <p class="link-description">Easy graphic design tool</p>
                <span class="link-url">canva.com</span>
              </a>
              
              <a href="https://www.gimp.org" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">GIMP</h3>
                <p class="link-description">Free image editing software</p>
                <span class="link-url">gimp.org</span>
              </a>
              
              <a href="https://www.blender.org" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Blender</h3>
                <p class="link-description">Free 3D modeling and animation</p>
                <span class="link-url">blender.org</span>
              </a>
            </div>
          </div>
          
          <div class="links-section">
            <h2 class="section-title">Fun & Games</h2>
            <div class="links-grid">
              <a href="https://www.roblox.com" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Roblox</h3>
                <p class="link-description">Create and play games</p>
                <span class="link-url">roblox.com</span>
              </a>
              
              <a href="https://www.minecraft.net" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">Minecraft</h3>
                <p class="link-description">Build and explore worlds</p>
                <span class="link-url">minecraft.net</span>
              </a>
              
              <a href="https://www.lego.com" class="link-card" target="_blank" rel="noopener">
                <h3 class="link-title">LEGO</h3>
                <p class="link-description">Building and creativity</p>
                <span class="link-url">lego.com</span>
              </a>
            </div>
          </div>
        </div>
      </section>
    </main>
    
    <RightSidebar />
  </div>
</Layout>

<style>
  .links-page {
    padding: 2rem 0;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: var(--body-text-color);
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--muted-text);
    margin: 0 0 3rem 0;
  }

  .links-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .links-section {
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    color: var(--body-text-color);
    border-bottom: 2px solid var(--accent-color);
    padding-bottom: 0.5rem;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .link-card {
    display: block;
    padding: 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .link-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border-color: var(--accent-color);
  }

  .link-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--body-text-color);
  }

  .link-description {
    margin: 0 0 1rem 0;
    color: var(--muted-text);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .link-url {
    font-size: 0.75rem;
    color: var(--accent-color);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 