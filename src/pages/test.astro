---
import { getCollection } from 'astro:content';

// Get all posts for debugging
const posts = await getCollection('posts');
---

<html>
<head>
  <title>Debug Test</title>
</head>
<body>
  <h1>Debug: Content Collection</h1>
  <p>Total posts found: {posts.length}</p>
  
  <h2>Posts:</h2>
  <ul>
    {posts.map(post => (
      <li>
        <strong>{post.slug}</strong>: {post.data.title} 
        (Date: {post.data.date.toISOString()})
        (Categories: {post.data.categories?.join(', ') || 'none'})
      </li>
    ))}
  </ul>
</body>
</html> 